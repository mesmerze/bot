- edit ||= false
- collapsed = session[:account_shop].nil?
= subtitle :account_shop, collapsed, t(:shops)

.section
  %small#account_shop_intro{ hidden_if(!collapsed) }
    = t(:intro, t(:account_shops_small)) unless edit
  #shops{ hidden_if(collapsed) }
    %table{ style: "table-layout: fixed;" }
      %tr
        %td{ style: "width: 100px; padding: 0 65px 0 16px;" }
          .label.top.req #{t :name}:
        %td{ style: "width: 70px;" }
          .label.top{style: "padding:0px;"} #{t :shop_seats}:
        %td{ style: "width: 70px;" }
          .label.top{style: "padding:0px;"} #{t :country}:
        %td{ style: "width: 115px;" }
          .label.top{style: "padding:0px;"} #{t :closed_date}:
        %td
          .label.top.req #{t :stage}:
    = f.simple_fields_for :shops do |shop|
      = render 'shop_fields', f: shop
    .links
      = link_to_add_association '', f, :shops, class: 'ui-icon ui-icon-plus blue',
                                               style: 'display:flex; margin:0.5rem 0 0;'
