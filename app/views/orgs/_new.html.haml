= simple_form_for(@org, :html => one_submit_only, :remote => true) do |f|
  = link_to_close new_org_path
  = f.hidden_field :user_id

  = f.error_messages :object_name => t('org')

  = render "orgs/top_section",  :f => f
  = render "shared/add_comment", :f => f
  = render "entities/permissions",  :f => f, :entity => @org
  = hook(:entity_form, self, {f: f, entity: @org})

  .buttonbar
    - if Setting.compound_address
      = f.submit t(:create_org), :onclick => "crm.clear_all_hints()"
    - else
      = f.submit t(:create_org)
    #{t :or}
    = link_to_cancel new_org_path
