.remote
  = simple_form_for(@shop, :html => one_submit_only, :remote => true) do |f|
    = link_to_close edit_shop_path(@shop)
    = f.hidden_field :user_id

    = f.error_messages :object_name => t('shop')

    = render "shops/top_section",  :f => f, :edit => true

    = hook(:entity_form, self, {f: f, entity: @shop})

    .buttonbar
      = f.submit t(:save_shop)
      #{t :or}
      = link_to_cancel edit_shop_path(@shop)
